{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@tests/*": [
        "tests/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@services/*": [
        "src/services/*"
      ],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/**.ts",
    "tests/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
