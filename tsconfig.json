{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "typings/*": [
        "src/typings/*"
      ],
      "models/*": [
        "src/models/*"
      ],
      "*": [
        "node_modules/*",
      ]
    }
  },
  "include": [
    "src/**/**.ts",
    "test/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
