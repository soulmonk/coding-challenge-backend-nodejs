{
  "name": "ndfsm_server",
  "version": "0.1.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start": "node -r ./scripts/tsconfig-paths-bootstrap.js dist/src/index.js",
    "ts-start": "ts-node -r tsconfig-paths/register ./src/index.ts",
    "watch-server": "nodemon --watch 'src/**/*' -e ts,tsx --exec npm run ts-start",
    "watch-server2": "nodemon --watch 'src/**/*' -e ts,tsx --exec npm run start",
    "create-schema": "graphql get-schema",
    "create-types": "graphql-schema-typescript --namespace=GQL --global=true --typePrefix='' generate-ts --output='src/graphql/__typedefs/graphqlTypes.d.ts' 'src/graphql/__typedefs'",
    "test:integration": "npm run build && NODE_ENV=test mocha -r ts-node/register -r tsconfig-paths/register --exit --recursive dist/tests/integration",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.bustaf.com:soulmonk/coding-challenge-backend-nodejs.git"
  },
  "keywords": [
    "REST",
    "typescript",
    "node.js",
    "graphql",
    "koa.js"
  ],
  "author": "Melnykov Vitalii (fsoulmonk@gmail.com)",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "acorn": "^6.1.1",
