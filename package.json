    "graphql-scalar-types": "^2.0.0",
    "graphql-tools": "^4.0.4",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-bodyparser": "^4.2.1",
    "koa-favicon": "^2.0.1",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mz": "^2.7.0",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "pg-promise": "^8.7.2",
    "pino": "^5.12.5",
